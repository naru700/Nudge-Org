.auth-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: calc(100vh - 64px);
  background: linear-gradient(120deg, #f5f7fa 0%, #e4e8f0 100%);
  padding: 2rem;
}

.auth-card {
  background: #ffffff;
  padding: 2.5rem;
  border-radius: 10px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
  width: 100%;
  max-width: 420px;
  border: 1px solid rgba(0, 0, 0, 0.03);
}

.card-header {
  margin-bottom: 2rem;
  text-align: center;

  h2 {
    font-size: 1.8rem;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 0.5rem;
    
    @media (max-width: 480px) {
      font-size: 1.6rem;
    }
  }
}

.auth-form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  width: 100%;

  @media (max-width: 480px) {
    gap: 1.25rem;
  }
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  margin-bottom: 0.5rem;

  label {
    font-size: 0.9rem;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 0.25rem;

    @media (max-width: 480px) {
      font-size: 0.85rem;
    }
  }

  .form-control {
    width: 100%;
  }

  .error {
    color: #e74c3c;
    font-size: 0.8rem;
    margin-top: 0.25rem;
  }
}

.action-area {
  margin-top: 1rem;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.login-btn {
  background: #3498db;
  color: white;
  border: none;
  height: 48px;
  border-radius: 6px;
  font-weight: 600;
  font-size: 1rem;
  cursor: pointer;
  transition: background-color 0.2s ease;
  width: 100%;
  
  &:hover {
    background: #2980b9;
  }
  
  &:disabled {
    background: #95a5a6;
    cursor: not-allowed;
  }

  @media (max-width: 480px) {
    height: 44px;
    font-size: 0.95rem;
  }
}

.bottom-link {
  margin-top: 1.5rem;
  text-align: center;
  font-size: 0.9rem;
  color: #7f8c8d;
  
  a {
    color: #3498db;
    font-weight: 500;
    margin-left: 0.25rem;
    
    &:hover {
      color: #2980b9;
      text-decoration: underline;
    }
  }
}

input[type="email"],
input[type="text"] {
  height: 48px;
  padding: 12px 16px;
  border: 2px solid #d1d5db;
  border-radius: 8px;
  font-size: 16px;
  color: #111827;
  background-color: white;
  transition: all 0.15s ease-in-out;
  width: 100%;

  @media (max-width: 480px) {
    height: 44px;
    padding: 10px 12px;
    font-size: 16px;
  }

  @media (max-width: 360px) {
    height: 40px;
    padding: 8px 10px;
  }

  &::placeholder {
    color: #9ca3af;
  }

  &:hover {
    border-color: #9ca3af;
  }

  &:focus {
    outline: none;
    border-color: #0a66c2;
    box-shadow: 0 0 0 3px rgba(10, 102, 194, 0.1);
  }

  &.ng-invalid.ng-touched {
    border-color: #ef4444;

    &:focus {
      border-color: #ef4444;
      box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
    }
  }
}

// PrimeNG overrides
:host ::ng-deep {
  .p-password {
    width: 100%;
  }
  
  .p-inputtext {
    height: 48px;
    padding: 12px 16px;
    border: 2px solid #d1d5db;
    border-radius: 8px;
    font-size: 16px;
    color: #111827;
    background-color: white;
    transition: all 0.15s ease-in-out;
    width: 100%;

    @media (max-width: 480px) {
      height: 44px;
      padding: 10px 12px;
      font-size: 16px;
    }

    @media (max-width: 360px) {
      height: 40px;
      padding: 8px 10px;
    }
    
    &::placeholder {
      color: #9ca3af;
    }
    
    &:hover {
      border-color: #9ca3af;
    }
    
    &:focus {
      outline: none;
      border-color: #3498db;
      box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
    }
    
    &.ng-invalid.ng-touched {
      border-color: #e74c3c;
      
      &:focus {
        border-color: #e74c3c;
        box-shadow: 0 0 0 3px rgba(231, 76, 60, 0.2);
      }
    }
  }
  
  .p-button {
    height: 48px;
    padding: 12px 24px;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    background-color: #3498db;
    border: 2px solid #3498db;
    color: white;
    cursor: pointer;
    transition: all 0.2s ease;
    width: 100%;

    @media (max-width: 480px) {
      height: 44px;
      padding: 10px 20px;
      font-size: 15px;
    }

    @media (max-width: 360px) {
      height: 40px;
      padding: 8px 16px;
      font-size: 14px;
    }
    
    &:hover:not(:disabled) {
      background-color: #2980b9;
      border-color: #2980b9;
    }
    
    &:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }
  }
  
  .p-password-toggle {
    color: #9ca3af;
    right: 12px;
    
    @media (max-width: 480px) {
      right: 10px;
    }
    
    &:hover {
      color: #6b7280;
    }
  }
}

.error {
  color: #ef4444;
  font-size: 0.8rem;
  margin-top: 0.25rem;

  @media (max-width: 480px) {
    font-size: 0.75rem;
  }
}

.success {
  color: #10b981;
  font-size: 1rem;
  margin-top: 1rem;
  text-align: center;
  padding: 0.75rem;
  background-color: #ecfdf5;
  border: 1px solid #10b981;
  border-radius: 8px;

  @media (max-width: 480px) {
    font-size: 0.9rem;
    padding: 0.5rem;
    margin-top: 0.75rem;
  }

  @media (max-width: 360px) {
    font-size: 0.85rem;
    padding: 0.4rem;
  }
}

// Additional responsive utilities
@media (max-width: 768px) {
  .auth-container {
    padding: 1rem 0.5rem;
  }
}

@media (max-width: 480px) {
  .auth-container {
    padding: 0.5rem 0.25rem;
  }
}

@media (max-width: 360px) {
  .auth-container {
    padding: 0.25rem;
  }
}

